{
  "manifest_version": 3,
  "name": "TikTok Repost Remover",
  "version": "1.0",
  "description": "Automatically remove all reposts from TikTok.",
  "permissions": ["scripting", "activeTab", "tabs", "storage"],
  "host_permissions": ["https://*.tiktok.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "16x16.png",
      "48": "48x48.png",
      "128": "128x128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
